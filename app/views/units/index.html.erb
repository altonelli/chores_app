<div id="notice"><%= notice %></div>

<h1>Listing Units</h1>
<%= link_to 'Create Unit', new_unit_path, class: "btn btn-danger btn-md"%>
<ul class="list-group">

<% @units.each do |unit| %>
  <li class="list-group-item"> <%= link_to unit.name, unit_path(unit) %> <%= link_to_if current_user, "Join", user_path(current_user, state: "pending", unit: unit), method: :patch %> </li>
<% end %>

</ul>
