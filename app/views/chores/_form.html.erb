<%= form_for @user_chore, url: (params[:action] == "new" ? unit_chores_path(@unit, @user_chore) : @chore), html: { class: "form-control" } do |f| %>

  <% if @user_chore.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@chore.errors.count, "error") %> prohibited this chore from being saved:</h2>

      <ul>
      <% @chore.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<fieldset>
  <div class="field">
    <%= f.collection_check_boxes :user_id, @unit.users.each, :id, :name do |b| %>
    <div class="collection_check_box">
      <%= b.check_box %>
      <%= b.label %>
    </div>
    <% end %>
  </div>
  <%= fields_for @chore do |ch| %>
  <div class="field">
    <%=ch.label :title %><br>
    <%=ch.text_field :title, class: "form-control" %>
  </div>
  <div class="field">
    <%=ch.label :details %></br>
    <%=ch.text_field  :details, class: "form-control" %>
  </div>
  <% end %>
  <div class="actions">
    <%= f.submit %>
  </div>
</fieldset>
<% end %>
