
<%= form_for user, class: "form-group" do |f| %>
  <% if user.errors.any? %>

    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-md-6">
  <fieldset>
    <div class="control-group">
      <%= f.label :name %><br>
      <%= f.text_field :name, class: "form-control", id: "user_name_field_#{user.id}" %>
    </div>
    <div class="control-group">
      <%= f.label :email %><br>
      <%= f.text_field :email, class: "form-control", id: "user_email_field_#{user.id}" %>
    </div>
    <div class="control-group">
      <%= f.label :phone %><br>
      <%= f.text_field :phone, class: "form-control", id: "user_email_phone_#{user.id}" %>
    </div>
    <% if !user.id %>
    <div class="control-group">
      <%= f.label :password %><br>
      <%= f.password_field :password, class: "form-control", id: "user_password_field_#{user.id}" %>
    </div>
    <% end %>
    <div class="control-group">
      <%= f.label :photo_URL %><br>
      <%=f.text_field :photo, class: "form-control", id: "user_photo_field_#{user.id}" %>
    </div>
    <div class="control-actions">
      <%= f.submit class: "btn btn-default"%>
    </div>
  </fieldset>
</div>

<% end %>
