<!DOCTYPE html>
<html>
  <head>
    <title>CHÕRUS</title>
    <%= favicon_link_tag 'luma.ico' %>

    <!-- Latest compiled and minified CSS -->
  <!-- <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha/css/bootstrap.min.css" rel="stylesheet"/> -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
  <!-- Latest compiled and minified JavaScript -->
  <!-- <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.2/jquery.min.js"></script> -->
  <!-- <link href="//cdnjs.cloudflare.com/ajax/libs/bootcards/1.1.1/css/bootcards-ios.min.css" rel="stylesheet"> -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous"></script>
  <link href="//netdna.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet" />
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <script src="../application.js"></script>
  </head>

  <body style="padding-top: 0px">
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "CHÕRUS", root_path, class: "btn btn-danger" %>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <% if current_user %>
              <li><%= link_to "CHÕRUS", root_path, class: "btn btn-danger" %></li>
              <li><%= link_to "Log-Out", logout_path, class: "btn btn-warning" %></li>
              <li><%= link_to "Profile", user_path(current_user), class: "btn btn-info" %></li>
            <% else %>
              <li><%= link_to "Sign-Up", signup_path, class: "btn btn-info"%></li>
              <li><%= link_to "Log-In", login_path, class: "btn btn-primary"%></li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">MENU <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <% if current_user %>
                <li><%= link_to "Profile", user_path(current_user), class: "btn btn-info" %></li>
                <li><%# link_to "Unit", unit_path(current_user.unit) %></li>
                <li><%# link_to "Chores", unit_chores_path(current_user.unit) %></li>
                <% else %>
                <li><%= link_to "Log In", login_path, class: "btn btn-primary" %></li>
                <li><%= link_to "Sign Up", signup_path, class: "btn btn-info"%></li>
                <% end %>
                <li role="separator" class="divider"></li>
                <li><a href="#">Separated link</a></li>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <div class="container">
      <%= yield %>
    </div>

</body>
</html>
